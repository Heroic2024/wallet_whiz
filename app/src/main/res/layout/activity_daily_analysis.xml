<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011402"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Expense Analysis"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Month Selection (in "YYYY-MM" format) -->
        <EditText
            android:id="@+id/et_analysis_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Month (YYYY-MM)"
            android:focusable="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1F3A1"
            android:backgroundTint="#B1F3A1"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_analyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analyze"
            android:textColor="#000000"
            android:backgroundTint="#41F022"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:padding="12dp" />

        <!-- Analysis Results Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#021805"
            android:elevation="6dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_total_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expense: ₹0.00"
                android:textColor="#F6F3F3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_expense_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Expenses: 0"
                android:textColor="#F6F3F3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_highest_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest Expense: ₹0.00"
                android:textColor="#F6F3F3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- Expense Details Section -->
        <TextView
            android:id="@+id/tv_expense_details_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Details:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/lv_expense_details"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" /><!-- Ensure text color is white in the ListView -->
    </LinearLayout>
</ScrollView>
