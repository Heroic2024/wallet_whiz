<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011402"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="App Logo"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Signup Title -->
    <TextView
        android:id="@+id/txt_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="6dp" />

    <!-- Card for Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#021805"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp">

        <!-- Name Input -->
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1F3A1"
            android:backgroundTint="#B1F3A1"
            android:padding="10dp"
            android:inputType="textPersonName"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/edt_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1F3A1"
            android:backgroundTint="#B1F3A1"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/edt_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1F3A1"
            android:backgroundTint="#B1F3A1"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"/>

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1F3A1"
            android:backgroundTint="#B1F3A1"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"/>

        <!-- Signup Button -->
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#000000"
            android:backgroundTint="#41F022"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Already have an account (Login) -->
        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#B1F3A1"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:paddingTop="10dp"/>
    </LinearLayout>

</LinearLayout>