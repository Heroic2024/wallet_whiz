<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011402"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/txt_budget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Your Monthly Budget"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"/>

    <!-- Budget Input -->
    <EditText
        android:id="@+id/edt_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your budget"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1F3A1"
        android:backgroundTint="#B1F3A1"
        android:padding="10dp"
        android:inputType="numberDecimal"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_set_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Budget"
        android:textColor="#000000"
        android:backgroundTint="#41F022"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
</LinearLayout>