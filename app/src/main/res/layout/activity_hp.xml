<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011402"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="6dp" />

    <!-- Motivational Quote -->
    <TextView
        android:id="@+id/txt_motivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Save money, and money will save you.”"
        android:textColor="#B1F3A1"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:paddingBottom="12dp" />

    <!-- Current Balance Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#021805"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="14dp"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Budget"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1000.00"
            android:textColor="#41F022"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="5dp" />
    </LinearLayout>

    <!-- Expense Summary Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#021805"
        android:orientation="vertical"
        android:padding="14dp"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Spending"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_today_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹300.00"
            android:textColor="#F4A22A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="5dp" />
    </LinearLayout>

    <!-- Spending Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_spending"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="30"
        android:max="100"
        android:progressTint="#F4A22A"
        android:layout_marginBottom="12dp" />

    <!-- Spacer to push nav bar to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation Bar -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="20dp"
        android:rowCount="2"
        android:layout_marginBottom="30dp">

        <!-- Add Expense Button -->
        <LinearLayout
            android:id="@+id/btn_add_expense"
            android:layout_width="151dp"
            android:layout_height="148dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_add_expense"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Coin Icon"
                android:src="@drawable/ic_coin" />

            <TextView
                android:id="@+id/txt_add_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Expense"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Withdraw Button -->
        <LinearLayout
            android:id="@+id/btn_analysis"
            android:layout_width="154dp"
            android:layout_height="153dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_withdraw"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Withdraw Icon"
                android:src="@drawable/ic_withdraw" />

            <TextView
                android:id="@+id/txt_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Analysis"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Transfer Button -->
        <LinearLayout
            android:id="@+id/btn_transfer"
            android:layout_width="149dp"
            android:layout_height="152dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_transfer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Transfer Icon"
                android:src="@drawable/ic_transfer" />

            <TextView
                android:id="@+id/txt_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="History"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card Button -->
        <LinearLayout
            android:id="@+id/btn_others"
            android:layout_width="153dp"
            android:layout_height="154dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_others"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Card Icon"
                android:src="@drawable/ic_others" />

            <TextView
                android:id="@+id/txt_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Others"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>