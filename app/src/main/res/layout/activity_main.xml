<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ED762"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#5ED762"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Menu Icon"
            android:padding="5dp"
            android:src="@drawable/ic_card" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Icons Section (Grid) -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="20dp"
        android:rowCount="2">

        <!-- Add Expense Button (Grid Item) -->
        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="148dp"
            android:layout_margin="10dp"
            android:background="@drawable/grid_item_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Coin Icon"
                android:src="@drawable/ic_coin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Expense"
                android:textColor="#050000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Withdraw Button -->
        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="153dp"
            android:layout_margin="10dp"
            android:background="@drawable/grid_item_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Withdraw Icon"
                android:src="@drawable/ic_withdraw" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Withdraw"
                android:textColor="#050000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Transfer Button -->
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="152dp"
            android:layout_margin="10dp"
            android:background="@drawable/grid_item_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Transfer Icon"
                android:src="@drawable/ic_transfer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Transfer"
                android:textColor="#050000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card Button -->
        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="154dp"
            android:layout_margin="10dp"
            android:background="@drawable/grid_item_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Card Icon"
                android:src="@drawable/ic_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Card"
                android:textColor="#050000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>

    <!-- Add Expense Button (Below Grid and Above Bottom Nav) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNav"
        android:layout_below="@id/gridLayout"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:padding="16dp"
            android:text="Add Expense"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>


    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="Transactions"
            android:src="@drawable/ic_transactions" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile" />
    </LinearLayout>

</RelativeLayout>
